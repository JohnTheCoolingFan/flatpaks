{
    "name": "lib32-libgphoto2",
    "build-options": {
        "arch": {
            "x86_64": {
                "prepend-pkg-config-path": "/app/lib32/pkgconfig:/usr/lib/i386-linux-gnu/pkgconfig",
                "ldflags": "-L/app/lib32",
                "prepend-path": "/usr/lib/sdk/toolchain-i386/bin",
                "env": {
                    "CC": "i686-unknown-linux-gnu-gcc",
                    "CXX": "i686-unknown-linux-gnu-g++"
                },
                "libdir": "/app/lib32"
            }
        }
    },
    "config-opts": [
        "LIBGD_CFLAGS=-I/app/include",
        "LIBGD_LIBS=/app/lib32/libgd.so",
        "LIBUSB1_CFLAGS=-I/app/include/libusb-1.0",
        "LIBUSB1_LIBS=/app/lib32/libusb-1.0.so"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/gphoto/libgphoto2/releases/download/v2.5.27/libgphoto2-2.5.27.tar.gz",
            "sha256": "fd48f6f58259ba199e834010aca0af3672ca0223ed0a98ba89ec693a415f242a",
            "x-checker-data": {
                "type": "anitya",
                "project-id": 12558,
                "stable-only": true,
                "url-template": "https://github.com/gphoto/libgphoto2/releases/download/v$version/libgphoto2-$version.tar.gz"
            }
        },
        {
            "type": "shell",
            "commands": [
                "sed -i 's/-lgd//' configure.ac"
            ]
        }
    ],
    "modules": [
        "../gd/lib32-gd.json",
        "../libjpeg-turbo/lib32-libjpeg-turbo.json",
        "../libusb/lib32-libusb.json"
    ],
    "cleanup": [
        "/bin",
        "/doc",
        "/lib*/udev",
        "/share/libgphoto2",
        "/share/libgphoto2_port",
        "/share/man"
    ]
}
