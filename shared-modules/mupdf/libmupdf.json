{
    "name": "libmupdf",
    "no-autogen": true,
    "build-options": {
        "cflags": "-fPIC",
        "cxxflags": "-fPIC",
        "env": {
            "USE_SYSTEM_LIBS": "yes"
        }
    },
    "make-args": [
        "shared=yes",
        "build=release",
        "libs"
    ],
    "make-install-args": [
        "shared=yes",
        "build=release",
        "libs",
        "prefix=/app"
    ],
    "post-install": [
        "libmupdf_ver=$(grep '#define FZ_VERSION' ${FLATPAK_DEST}/include/mupdf/fitz/version.h | head -1 | cut -d\\\" -f2); sed -i 's/\\$\\$VERSION\\$\\$/'${libmupdf_ver}'/' mupdf.pc",
        "install -Dm644 mupdf.pc -t ${FLATPAK_DEST}/lib/pkgconfig/"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://mupdf.com/downloads/archive/mupdf-1.18.0-source.tar.xz",
            "sha256": "592d4f6c0fba41bb954eb1a41616661b62b134d5b383e33bd45a081af5d4a59a",
            "x-checker-data": {
                "type": "anitya",
                "project-id": 2034,
                "stable-only": true,
                "url-template": "https://mupdf.com/downloads/archive/mupdf-$version-source.tar.xz"
            }
        },
        {
            "type": "file",
            "path": "mupdf.pc"
        },
        {
            "type": "shell",
            "commands": [
                "rm -rf thirdparty/{freeglut,freetype,harfbuzz,jbig2dec,libjpeg,openjpeg,zlib}"
            ]
        }
    ],
    "cleanup": [
        "/bin",
        "/share"
    ],
    "modules": [
        "../freeglut/freeglut.json",
        {
            "name": "jbig2dec",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/ArtifexSoftware/jbig2dec/archive/0.19.tar.gz",
                    "sha256": "e81b787ad0b147a437a52d9ce7de1a8f429655e8aa030383b6b2dd8919373717",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1431,
                        "stable-only": true,
                        "url-template": "https://github.com/ArtifexSoftware/jbig2dec/archive/$version.tar.gz"
                    }
                }
            ],
            "cleanup": [
                "/bin",
                "/share/man"
            ]
        },
        {
            "name": "gumbo-parser",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/google/gumbo-parser/archive/v0.10.1.tar.gz",
                    "sha256": "28463053d44a5dfbc4b77bcf49c8cee119338ffa636cc17fc3378421d714efad",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 214990,
                        "stable-only": true,
                        "url-template": "https://github.com/google/gumbo-parser/archive/v$version.tar.gz"
                    }
                }
            ]
        }
    ]
}
