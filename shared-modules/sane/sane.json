{
    "name": "sane",
    "config-opts": [
        "--sbindir=${FLATPAK_DEST}/bin",
        "--with-avahi",
        "--with-poppler-glib",
        "--without-gphoto2",
        "--without-snmp",
        "--without-usb",
        "--without-v4l",
        "BACKENDS=escl net"
    ],
    "sources": [
        "sources.json"
    ],
    "modules": [
        "../avahi/libavahi.json",
        "../poppler/poppler.json"
    ],
    "cleanup": [
        "/etc",
        "/share/doc",
        "/share/man",
        "/share/sane"
    ]
}
