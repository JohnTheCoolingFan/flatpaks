{
  "name": "pipewire-jack",
  "buildsystem": "meson",
  "subdir": "pipewire",
  "config-opts": [
    "-Ddocs=disabled",
    "-Dexamples=disabled",
    "-Dmedia-session=disabled",
    "-Dman=disabled",
    "-Dtests=disabled",
    "-Dgstreamer=disabled",
    "-Dsystemd=disabled",
    "-Dpipewire-alsa=disabled",
    "-Dpipewire-jack=enabled",
    "-Dlibjack-path=/app/lib",
    "-Dalsa=disabled",
    "-Dbluez5=disabled",
    "-Djack=disabled",
    "-Dlibcamera=disabled",
    "-Dvideoconvert=disabled",
    "-Dvulkan=disabled",
    "-Dpw-cat=disabled",
    "-Dudev=disabled"
  ],
  "sources": [
    {
      "type": "git",
      "url": "https://gitlab.freedesktop.org/pipewire/pipewire.git",
      "tag": "0.3.25",
      "commit": "c324107211718043553337cb10d022fe9d2d12d8",
      "dest": "pipewire"
    },
    {
      "type": "git",
      "url": "https://github.com/jackaudio/headers",
      "branch": "master",
      "commit": "ab27e5a59fe5294cf09d50ffa2414d1542cf245e",
      "dest": "jack-headers"
    },
    {
      "type": "file",
      "path": "pipewire-jack.pc"
    },
    {
      "type": "shell",
      "commands": [
        "install -Dm644 jack-headers/*.h -t /app/include/jack/",
        "install -Dm644 pipewire-jack.pc /app/lib/pkgconfig/jack.pc"
      ]
    }
  ],
  "cleanup": [
    "/bin",
    "/include",
    "/lib/pkgconfig"
  ]
}
