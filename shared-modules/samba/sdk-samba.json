{
    "name": "sdk-samba",
    "build-options": {
        "env": [
            "PERL5LIB=/usr/lib/perl5"
        ]
    },
    "config-opts": [
        "--libdir=/usr/lib/x86_64-linux-gnu",
        "--libexecdir=/usr/lib/x86_64-linux-gnu/samba",
        "--localstatedir=/var",
        "--sbindir=/usr/bin",
        "--sysconfdir=/usr/etc",
        "--with-configdir=/usr/etc/samba",
        "--with-lockdir=/var/cache/samba",
        "--with-piddir=/run",
        "--with-sockets-dir=/run/samba",
        "--disable-rpath-install",
        "--disable-python",
        "--enable-cups",
        "--enable-fhs",
        "--with-acl-support",
        "--with-ads",
        "--with-ldap",
        "--with-winbind",
        "--without-ad-dc",
        "--without-pam",
        "--without-systemd"
    ],
    "sources": [
        "sources.json"
    ],
    "cleanup": [
        "/etc",
        "/share/man",
        "/share/samba"
    ],
    "modules": [
        "../cups/sdk-libcups.json",
        "../krb5/sdk-krb5.json",
        "../rpcsvc-proto/rpcsvc-proto.json",
        "jansson/jansson.json",
        "ldb/sdk-ldb.json",
        "perl-dependencies.json"
    ]
}
