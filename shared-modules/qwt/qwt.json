{
    "name": "qwt",
    "build-options": {
        "env": [
            "QT_INSTALL_PREFIX=/app"
        ]
    },
    "buildsystem": "qmake",
    "config-opts": [
        "QT_INSTALL_PREFIX=/app"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://downloads.sourceforge.net/qwt/qwt-6.2.0.tar.bz2",
            "sha256": "9194f6513955d0fd7300f67158175064460197abab1a92fa127a67a4b0b71530",
            "x-checker-data": {
                "type": "anitya",
                "project-id": 4147,
                "stable-only": true,
                "url-template": "https://downloads.sourceforge.net/qwt/qwt-$version.tar.bz2"
            }
        },
        {
            "type": "shell",
            "commands": [
                "sed -i \"/QWT_INSTALL_PREFIX    =.*/d\" qwtconfig.pri",
                "sed -i \"s#QWT_INSTALL_PREFIX =.*#QWT_INSTALL_PREFIX = /app#\" qwtconfig.pri"
            ]
        }
    ]
}